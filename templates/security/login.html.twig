{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="limiter">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 text-center">Connexion</h1>

        <div class="d-flex justify-content-center flex-column mt-5">
            <div class="row">
                <div class="col-6 mb-3">
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
                </div>
                <div class="col-6">
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                </div>
            </div>
        </div>

        <div class="checkbox mt-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>

        </div>
        <div class="d-flex justify-content-center">
            <button class="btn-sm btn-primary mt-3" type="submit">
                Connexion
            </button>
            <a href="{{ path('app_reset_password', {'token': 'x'}) }}" class="btn-sm btn-primary mt-3 ml-5" type="submit">
                Mot de passe oubli√©
            </a>
        </div>
    </form>
{% endblock %}