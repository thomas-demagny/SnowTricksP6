{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    {% block header %}
        <header>
            <div class="jumbotron-fluid vh-100 imageBG">
                <div class="h-100 d-flex align-items-center">
                    <div class="col-12 text-center">
                        <h1 class="snow">SnowTricks</h1>
                        <p class="lead">Ride your life</p>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn-sm btn-dark rounded-circle">tricks</button>
                </div>
            </div>
        </header>
    {% endblock %}
    <section class="limiter container-fluid">
        <h1>Liste des Tricks</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Crée le</th>
                <th>Modifié le</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for trick in tricks %}
                <tr>
                    <td>{{ trick.id }}</td>
                    <td>{{ trick.title }}</td>
                    <td>{{ trick.description }}</td>
                    <td>{{ trick.createdAt ? trick.createdAt|format_datetime(pattern='dd-MM-YYYY') : '' }}</td>
                    <td>{{ trick.updateAt ? trick.updateAt|format_datetime(pattern='dd-MM-YYYY') : '' }}</td>
                    <td>
                        <a href="{{ path('trick_show', {'id': trick.id}) }}">show</a>
                        <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('trick_new') }}">Create new</a>
    </section>
{% endblock %}
