{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <header>
        <div id="intro" class="jumbotron-fluid">

            <div class="d-flex align-items-center justify-content-center h-100">

                <div class="row d-flex justify-content-center text-center">
                    <div class="col-md-10 col-lg-12">
                        <!-- Heading -->
                        <h1 class="display-4 font-weight-bold white-text pt-5 mb-2">
                            SnowTricks
                        </h1>
                        <h2 class="my-4 text-bold text-capitalize">
                            Ride your life
                        </h2>
                    </div>
                    <div class="d-flex align-self-end my-5">
                        <a href="#list" class="btn btn-outline-white">
                            <i class="fas fa-2x fa-arrow-alt-circle-down"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main class="container-fluid mx-auto mt-3">
        <nav class="mb-5 mt-5 d-flex justify-content-center">
            <a href="#" class="btn btn-info mr-2">Flip</a>
            <a href="#" class="btn btn-dark mr-2">Front</a>
            <a href="#" class="btn btn-info mr-2">Back</a>
            <a href="#" class="btn btn-dark">Rotation</a>
        </nav>
        <!--  Section Tricks -->
        <section id="list">
            <div class="row justify-content-around">
                {% for trick in tricks %}
                    <div class="col-md-2 col-lg-2 mb-5 mr-1" style="width: 18rem;">
                        <img src="{{ asset('img/defaultTrickPix.jpg') }}" class="card-img-top" alt="figure de snowboard">
                        <a href="{{ path('trick_show', {'id': trick.id}) }}" class="text-decoration-none arrow-color">
                            <h5 class="card-title text-center">{{ trick.title }}</h5>
                        </a>
                        <div class="card-footer d-flex justify-content-md-around bg-info">
                            {% if is_granted("ROLE_USER") %}
                            <a href="{{ path('trick_edit', {'id': trick.id}) }}"
                               class="btn btn-sm mr-2">
                                <i class="fas fa-pencil-alt"></i>
                                Modifier
                            </a>
                            {{ include('trick/_delete_form.html.twig') }}
                        </div>
                        {% else %}
                            <p>Pour modifier ou supprimer merci de vous connecter</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>
    <!--end main-->
{% endblock %}