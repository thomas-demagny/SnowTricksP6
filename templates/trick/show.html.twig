{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
    <main class="limiter">
        <div class="d-flex justify-content-lg-between">
            <h1 class="justify-content-start">Trick</h1>
            <div class="justify-content-end">
                {{ include('trick/_delete_form.html.twig') }}</div>
        </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ trick.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ trick.createdAt ? trick.createdAt|format_datetime(pattern='dd-MM-YYYY') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ trick.updateAt ? trick.updateAt|format_datetime(pattern='dd-MM-YYYY') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trick') }}">back to list</a>

    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>

   </main>
{% endblock %}
