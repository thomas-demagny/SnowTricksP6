{% extends 'base.html.twig' %}

{% block title %}{{ trick.title }}{% endblock %}

{% block body %}
    <main class="limiter container">
        <div class="d-flex justify-content-lg-between">
            <h1 class="justify-content-start mr-4">Trick</h1>
            <div class="justify-content-end">
                {{ include('trick/_delete_form.html.twig') }}</div>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ trick.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description |raw }}</td>
            </tr>
            {% if trick.createdAt|format_datetime('medium') is same as (trick.updateAt|format_datetime('medium')) %}
                <tr>
                    <th>Crée le</th>
                    <td>{{ trick.createdAt|format_datetime('medium') }}</td>
                </tr>
            {% else %}
                <tr>
                    <th>Modifié le</th>
                    <td>{{ trick.updateAt ? trick.updateAt|format_datetime('medium') : '' }}  </td>
                </tr>
            {% endif %}
            </tbody>
        </table>

        <a href="{{ path('home') }}">back to list</a>
        {% if app.user %}
            <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>
        {% endif %}
    </main>
{% endblock %}



